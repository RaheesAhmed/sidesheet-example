{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.tsx",
    "providers/**/*.tsx",
    "contexts/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    ".next/types/**/*.ts",
    "styles/theme.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts"
  ]
}